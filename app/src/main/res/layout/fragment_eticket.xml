<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C63FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/chevron"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Back"/>
        </RelativeLayout>

        <!-- Airline Logo -->
        <ImageView
            android:id="@+id/ivAirlineLogo"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="Airline Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/indigo2" />

        <!-- E-Ticket Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Date -->
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 December 2022"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <!-- Flight Route -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <!-- Departure -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvFromCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEL"
                            android:textColor="#333333"
                            android:textSize="32sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvFromAirport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delhi International Airport"
                            android:textColor="#666666"
                            android:textSize="11sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Duration with Plane -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <View
                                android:layout_width="30dp"
                                android:layout_height="1dp"
                                android:background="#CCCCCC"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/airplane_black"
                                android:layout_marginHorizontal="4dp"
                                android:contentDescription="Flight"/>

                            <View
                                android:layout_width="30dp"
                                android:layout_height="1dp"
                                android:background="#CCCCCC"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="04h 30m"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Arrival -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/tvToCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BLR"
                            android:textColor="#333333"
                            android:textSize="32sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvToAirport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bengaluru Airport India"
                            android:textColor="#666666"
                            android:textSize="11sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Passenger and Meal Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginEnd="24dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/user"
                            android:contentDescription="Passenger"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/tvPassengers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01 Adult"
                            android:textColor="#333333"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/meal"
                            android:contentDescription="Meal"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meal"
                            android:textColor="#333333"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Ticket Details Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp">

                    <!-- Column 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Passenger Name -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Passenger Name"
                            android:textColor="#999999"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/tvPassengerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shreya Kumar"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>

                        <!-- Boarding Time -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Boarding Time"
                            android:textColor="#999999"
                            android:textSize="11sp"
                            android:layout_marginTop="16dp"/>

                        <TextView
                            android:id="@+id/tvBoardingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="06:15 AM"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Column 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <!-- Flight Type -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flight Type"
                            android:textColor="#999999"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/tvFlightType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Economy"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>

                        <!-- Gate -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gate"
                            android:textColor="#999999"
                            android:textSize="11sp"
                            android:layout_marginTop="16dp"/>

                        <TextView
                            android:id="@+id/tvGate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A5"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Column 3 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <!-- Flight Code -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flight Code"
                            android:textColor="#999999"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/tvFlightCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IG-2105"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>

                        <!-- Terminal -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terminal"
                            android:textColor="#999999"
                            android:textSize="11sp"
                            android:layout_marginTop="16dp"/>

                        <TextView
                            android:id="@+id/tvTerminal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="T2"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>

                        <!-- Seat Number -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seat Number"
                            android:textColor="#999999"
                            android:textSize="11sp"
                            android:layout_marginTop="16dp"/>

                        <TextView
                            android:id="@+id/tvSeatNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A5"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Dashed Line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line"
                    android:layout_marginVertical="24dp"
                    android:layerType="software"/>

                <!-- Barcode -->
                <ImageView
                    android:id="@+id/ivBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/barcode"
                    android:scaleType="fitCenter"
                    android:contentDescription="Barcode"/>

                <!-- Barcode Number -->
                <TextView
                    android:id="@+id/tvBarcodeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 2 5 8 4 6 2 4 2 7 5 3 1 3 5 0 6 7 5 9"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:letterSpacing="0.2"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"/>

                <!-- Terms & Condition -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms &amp; Condition"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"/>

                <TextView
                    android:id="@+id/tvTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Curabitur ultrices nisl ac vulputate lacinia. Donec pharetra tincidunt velit, sed iaculis est sollicitudin ac."
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Download Button -->
        <Button
            android:id="@+id/btnDownload"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Download E-Ticket"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/bg_button_download"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</ScrollView>
